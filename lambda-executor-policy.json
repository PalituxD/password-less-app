{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "PasswordLessApp",
            "Effect": "Allow",
            "Action": [
                "iam:PassRole",
                "iam:GetRole",
                "iam:CreateRole",
                "iam:PutRolePolicy",
                "iam:DeleteRolePolicy",
                "iam:DeleteRole",
                "cognito-idp:CreateUserPool",
                "cognito-idp:DeleteUserPool",
                "cognito-idp:CreateUserPoolClient",
                "cognito-idp:DeleteUserPoolClient",
                "lambda:*",
                "logs:*",
                "s3:*",
                "apigateway:*",
                "cloudformation:*"
            ],
            "Resource": "*"
        }
    ]
}